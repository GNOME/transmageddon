<?xml version="1.0"?>

<device>
    <make>Generic</make>
    <model>Linux Computer</model>
    <description>Profile for Linux Computer</description>
    <author>
        <name>Christian Schaller</name>
        <email>christian.schaller@collabora.co.uk</email>
    </author>
    <version>1.0</version>
    <icon>file://computer.svg</icon>
    <default>Normal</default>
    
    <profile>
        <name>Low</name>
        <container>application/ogg</container>
        <extension>ogg</extension>
        <audio>
            <name>audio/x-vorbis</name>
            <presets>
                <preset>Quality Low</preset>
            </presets>
        </audio>
        <video>
            <name>video/x-theora</name>
            <presets>
                <preset>Quality Low</preset>
            </presets> 
            <width>320, 640</width>
            <height>240, 480</height>
            <framerate>1, 25</framerate>
        </video>
    </profile>
    <profile>
        <name>Normal</name>
        <container>application/ogg</container>
        <extension>ogg</extension>
        <audio>
            <name>audio/x-vorbis</name>
            <presets>
                <preset>Quality Normal</preset>
            </presets>
        </audio>
        <video>
            <name>video/x-theora</name>
            <presets>
                <preset>Quality Normal</preset>
            </presets>
            <width>320, 1920</width>
            <height>240, 1080</height>
            <framerate>1, 30</framerate>
        </video>
    </profile>
    <profile>
        <name>Live Input</name>
        <container>application/ogg</container>
        <extension>ogg</extension>
        <audio>
            <name>audio/x-vorbis</name>
            <presets>
                <preset>bitrate=192000</preset>
            </presets>
        </audio>
        <video>
            <name>video/x-theora</name>
            <presets>
                <preset>pass=cbr bitrate=2048 subme=4 threads=0</preset>
            </presets> 
            <width>320, 1920</width>
            <height>240, 1080</height>
            <framerate>1, 30</framerate>
        </video>
    </profile>
    <profile>
        <name>High</name>
        <container>ffmux_mp4</container>
        <extension>mp4</extension>
        <audio>
            <name>faac</name>
            <presets>
                <preset>bitrate=256000</preset>
            </presets>
        </audio>
        <video>
            <name>x264enc</name>
            <presets>
                <preset>pass=qual quantizer=18 me=umh subme=6 ref=3 bframes=3 8x8dct=1 threads=0</preset>
            </presets>
            <width>320, 1920</width>
            <height>240, 1080</height>
            <framerate>1, 60</framerate>
        </video>
    </profile>
</device>

